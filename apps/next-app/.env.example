# ============================================
# DOMAIN & PORT CONFIGURATION
# ============================================
# Dev: localhost | Prod: super-duper.space

APP_URL=http://localhost:3000
# NEXT_JS
NEXT_PUBLIC_APP_URL=${APP_URL}
INTERNAL_API_URL=http://localhost:3333
# Only for dev
DEV_BACKEND_URL=http://localhost:3333
NEXT_PUBLIC_DEV_BACKEND_URL=${DEV_BACKEND_URL}

# ============================================
# ============================================
DATABASE_URL=postgresql://user:mypassword@localhost:5432/db-here
DIRECT_URL=postgresql://user:mypassword@localhost:5432/db-here

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_NAMESPACE=myapp

# ============================================
# API CONFIGURATION
# ============================================
SHOW_SQL=true
SESSION_SECRET=saddas123
LOGGER_LEVEL=debug

# ============================================
# AUTHENTICATION CONFIGURATION
# ============================================
SESSION_SECRET=your_random_secret_here
AUTH_LOGIN_REDIRECT=${APP_URL}
AUTH_COOKIES_SAME_SITE=lax
# AUTH_COOKIES_SECURE=true
# AUTH_COOKIES_DOMAIN=

# ============================================
# GITHUB OAUTH
# ============================================
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URL=${DEV_BACKEND_URL}/api/auth/github/redirect

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=${DEV_BACKEND_URL}/api/auth/google/redirect

# ============================================
# STRIPE CONFIGURATION
# ============================================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=

# ============================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ============================================
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
NEXT_PUBLIC_VAPID_PUBLIC_KEY=

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=@gmail.com

# ============================================
# OBSERVABILITY (OpenTelemetry)
# ============================================
# For local development with monitoring stack: OTEL_HOSTNAME=localhost
# For containerized production: OTEL_HOSTNAME=otel-collector
OTEL_HOSTNAME=localhost
# Set to 'false' to completely disable OpenTelemetry
OTEL_ENABLED=false
