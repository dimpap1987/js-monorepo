# Domain Configuration for i18n (domain-based locale routing)
# Production domains (without protocol, e.g., "example.com" not "https://example.com")
NEXT_PUBLIC_EN_DOMAIN="fitgym.com"
NEXT_PUBLIC_EL_DOMAIN="fitgym.gr"

# Site Configuration
NEXT_PUBLIC_SITE_NAME="FitGym"
NEXT_PUBLIC_SITE_URL="http://localhost:4200"
NEXT_PUBLIC_SITE_DESCRIPTION="Your fitness journey starts here"

# API Configuration
INTERNAL_API_URL=http://localhost:3333

# Development backend URL (for API proxy in dev mode)
DEV_BACKEND_URL="http://localhost:3000"
NEXT_PUBLIC_APP_ENV=local_build

# Bundle analyzer (set to 'true' to enable)
ANALYZE=false
