# ============================================
# ENVIRONMENT VARIABLES TEMPLATE
# Copy this file to .env and configure for your environment
# ============================================
# 
# This file uses variable interpolation (dotenv-expand).
# Change base variables below to configure different environments.
# Run: npm run sync:env after making changes

# ============================================
# BASE CONFIGURATION
# ============================================
# Change these for different environments (dev, staging, production)
HOSTNAME=localhost
API_PORT=3333
FRONTEND_PORT=3000
DATABASE_PORT=5432
REDIS_PORT=6379

# ============================================
# CONSTRUCTED HOSTNAMES (Auto-generated from above)
# ============================================
HOSTNAME_API=${HOSTNAME}:${API_PORT}
HOSTNAME_FRONTEND=${HOSTNAME}:${FRONTEND_PORT}
HOSTNAME_DATABASE=${HOSTNAME}:${DATABASE_PORT}
HOSTNAME_REDIS=${HOSTNAME}:${REDIS_PORT}
PUBLIC_HOSTNAME=${HOSTNAME_FRONTEND}

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_DB=my-db
DATABASE_USER=user
DATABASE_PASSWORD=your_password_here
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${HOSTNAME_DATABASE}/${DATABASE_DB}
DIRECT_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${HOSTNAME_DATABASE}/${DATABASE_DB}

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://${HOSTNAME_REDIS}
REDIS_NAMESPACE=myapp

# ============================================
# API CONFIGURATION
# ============================================
SHOW_SQL=true
SESSION_SECRET=your_session_secret_here
APP_URL=http://${HOSTNAME_FRONTEND}
LOGGER_LEVEL=debug
API_URL=http://${HOSTNAME_API}

# ============================================
# AUTHENTICATION CONFIGURATION
# ============================================
AUTH_LOGIN_REDIRECT=http://${HOSTNAME_FRONTEND}
AUTH_COOKIES_SAME_SITE=lax

# ============================================
# GITHUB OAUTH
# ============================================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://${HOSTNAME_API}/api/auth/github/redirect

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://${HOSTNAME_API}/api/auth/google/redirect

# ============================================
# STRIPE CONFIGURATION
# ============================================
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ============================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ============================================
VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key

# ============================================
# NEXT.JS FRONTEND CONFIGURATION
# ============================================
NEXT_PUBLIC_AUTH_URL=http://${HOSTNAME_API}
NEXT_PUBLIC_WEBSOCKET_PRESENCE_URL=ws://${HOSTNAME_API}/presence

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=admin@example.com

# ============================================
# DOCKER COMPOSE CONFIGURATION
# ============================================
POSTGRES_VOLUME_PATH=./data

# ============================================
# OBSERVABILITY (OpenTelemetry)
# ============================================
OTEL_HOSTNAME=otel-collector
