# ============================================
# DOMAIN & PORT CONFIGURATION
# ============================================
# Dev: localhost | Prod: super-duper.space

APP_URL=https://super-duper.space

INTERNAL_API_URL=http://my-api:3333

# NEXT_JS
NEXT_PUBLIC_APP_URL=${APP_URL}

# Only for dev
NEXT_PUBLIC_DEV_BACKEND_URL=${INTERNAL_API_URL}
DEV_BACKEND_URL=${INTERNAL_API_URL}

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>
DIRECT_URL=postgresql://<DB_USER>:<DB_PASSWORD>@<DB_HOST>:<DB_PORT>/<DB_NAME>

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL=redis://localhost:6379
REDIS_NAMESPACE=myapp

# ============================================
# API & SESSION CONFIGURATION
# ============================================
SHOW_SQL=true
SESSION_SECRET=<YOUR_RANDOM_SESSION_SECRET>
LOGGER_LEVEL=debug

# ============================================
# AUTHENTICATION CONFIGURATION
# ============================================
AUTH_LOGIN_REDIRECT=${APP_URL}
AUTH_COOKIES_SAME_SITE=lax
# AUTH_COOKIES_SECURE=true
# AUTH_COOKIES_DOMAIN=

# ============================================
# GITHUB OAUTH
# ============================================
GITHUB_CLIENT_ID=<YOUR_GITHUB_CLIENT_ID>
GITHUB_CLIENT_SECRET=<YOUR_GITHUB_CLIENT_SECRET>
GITHUB_REDIRECT_URL=${DEV_BACKEND_URL}/api/auth/github/redirect

# ============================================
# GOOGLE OAUTH
# ============================================
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>
GOOGLE_REDIRECT_URL=${DEV_BACKEND_URL}/api/auth/google/redirect

# ============================================
# STRIPE CONFIGURATION
# ============================================
STRIPE_SECRET_KEY=<YOUR_STRIPE_SECRET_KEY>
STRIPE_WEBHOOK_SECRET=<YOUR_STRIPE_WEBHOOK_SECRET>
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=<YOUR_STRIPE_PUBLISHABLE_KEY>

# ============================================
# WEB PUSH NOTIFICATIONS (VAPID)
# ============================================
VAPID_PUBLIC_KEY=<YOUR_VAPID_PUBLIC_KEY>
VAPID_PRIVATE_KEY=<YOUR_VAPID_PRIVATE_KEY>
NEXT_PUBLIC_VAPID_PUBLIC_KEY=<YOUR_VAPID_PUBLIC_KEY>

# ============================================
# ADMIN CONFIGURATION
# ============================================
ADMIN_EMAIL=<YOUR_ADMIN_EMAIL>

# ============================================
# DOCKER COMPOSE CONFIGURATION
# ============================================
POSTGRES_VOLUME_PATH=./data

# ============================================
# OBSERVABILITY (OpenTelemetry)
# ============================================
OTEL_HOSTNAME=localhost
OTEL_ENABLED=true